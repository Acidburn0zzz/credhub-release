#!/usr/bin/env bash

set -u

export PATH=/var/vcap/bosh/bin:/var/vcap/jobs/credhub/bin:$PATH

monit restart credhub

WHEN_FINISH=`mktemp --tmpdir=/tmp when-finishXXXXXX.timestamp`
WHEN_NOW=`mktemp --tmpdir=/tmp when-nowXXXXXX.timestamp`
scriptName=credhub-post-backup-unlock

health_check() {
json=`curl -k --silent https://localhost:<%= p("credhub.port") %>/health`
if [ $? -ne 0 ]; then
echo "Could not curl the credhub server"
return 1
fi
[ `echo $json | grep '"status":"UP"' | wc -l` -eq 1 ];
}

delete_timestamp_files() {
rm -f $WHEN_FINISH
rm -f $WHEN_NOW
echo "$scriptName - cleaned up timestamp files"
}

touch -d "600 seconds" $WHEN_FINISH
touch $WHEN_NOW
EXPIRATION=`ls -la --full-time $WHEN_FINISH |awk '{print $6 " " $7}'`
echo "$scriptName - performing post backup unlock healthcheck until $EXPIRATION"

while [ $WHEN_NOW -ot $WHEN_FINISH ]; do
health_check
if [ $? == 0 ]
then
delete_timestamp_files
echo "$scriptName - post backup unlock health check successful"
exit 0
fi
sleep 1
touch $WHEN_NOW
done
echo "$scriptName - post backup unlock health check failed"
delete_timestamp_files
exit 1
