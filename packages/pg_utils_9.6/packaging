#!/bin/bash

set -eux

function extract() {
  echo "Extracting archive..."

  tar zxvf pg_utils_9.6/postgresql-9.6.*.tar.gz
}

function compile() {
  echo "Compiling..."

  pushd postgres* > /dev/null
    ./configure \
      --prefix="${BOSH_INSTALL_TARGET}" \
      --with-openssl

    cp -LR src/include "${BOSH_INSTALL_TARGET}"

    pushd src/interfaces/libpq > /dev/null
      make
      make install
    popd > /dev/null

    pushd src/bin/pg_dump > /dev/null
      make
      make install
    popd
  popd > /dev/null
}

function main() {
  extract
  compile
}

main
